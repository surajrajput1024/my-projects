[flake8]
# Ignore E501 (line length) and other codes to be compatible with Black
extend-ignore = E203, E501, W503

# Exclude certain directories
exclude =
    .git,
    __pycache__,
    build,
    dist,
    venv,
    env,
    .venv,
    .eggs,
    *.egg,
    *.egg-info

# Per-file ignores
per-file-ignores =
    __init__.py: F401
